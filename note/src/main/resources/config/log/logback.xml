<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <substitutionProperty name="log.base" value="logs/note" />
    <jmxConfigurator />
     <appender name="stdout" class="ch.qos.logback.core.ConsoleAppender">
        <layout class="ch.qos.logback.classic.PatternLayout">
            <pattern>%d{HH:mm:ss.SSS}  %-5level thread:%t %logger{80} %n-%msg%n</pattern>
        </layout>
    </appender>
    <appender name="portalLogFile" class="ch.qos.logback.core.rolling.RollingFileAppender">
    	<filter class="ch.qos.logback.core.filter.EvaluatorFilter">  
            <evaluator name="myEval_exception">  
                <expression>
                	message.contains("com.jayu.exception.AuthorityException")
                	|message.contains("com.jayu.exception.SessionException")
          		</expression>
            </evaluator>  
            <onMatch>DENY</onMatch>  
            <onMismatch>ACCEPT</onMismatch>  
     </filter>
    	<file>${log.base}.log</file>
        <encoding>UTF-8</encoding>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${log.base}.%d{yyyy-MM-dd}.log.zip</fileNamePattern>
            <maxHistory>30</maxHistory>
        </rollingPolicy>
     	<rollingPolicy class="ch.qos.logback.core.rolling.FixedWindowRollingPolicy">   
      		<fileNamePattern>${log.base}.%i.log.zip</fileNamePattern>  
      		<minIndex>1</minIndex>   
      		<maxIndex>30</maxIndex>   
   		 </rollingPolicy>  
        <triggeringPolicy class="ch.qos.logback.core.rolling.SizeBasedTriggeringPolicy">
            <maxFileSize>5MB</maxFileSize>
        </triggeringPolicy>
        <layout class="ch.qos.logback.classic.PatternLayout">
            <pattern>%-20(%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread]) %-5level %logger{80} - %msg%n</pattern>
        </layout>
    </appender>
    <root level="ERROR">
    </root>
    <logger name="com.jayu.note" level="DEBUG">
             <appender-ref ref="stdout" />
    </logger>
    <logger name="com.jayu.freemarker" level="ERROR">
         <appender-ref ref="portalLogFile" />
    </logger>
     <logger name="com.jayu.spring.annotation.log" level="ERROR">
         <appender-ref ref="portalLogFile" />
    </logger>
     <logger name="com.opensymphony.oscache" level="ERROR">
         <appender-ref ref="portalLogFile" />
    </logger>
     <logger name="org.springframework.web" level="ERROR">
         <appender-ref ref="portalLogFile" />
    </logger>
        <logger name="org.springframework" level="DEBUG">
         <appender-ref ref="portalLogFile" />
            <appender-ref ref="stdout" />
    </logger>
    
    <logger name="freemarker.core" level="ERROR">
         <appender-ref ref="portalLogFile" />
    </logger>
  <logger name="org.apache.ibatis" level="ERROR">
         <appender-ref ref="portalLogFile" />
         <appender-ref ref="stdout" />
    </logger>
    <logger name="java.sql.Statement" level="ERROR">
        <appender-ref ref="portalLogFile"/>
    </logger>
    <logger name="java.sql.PreparedStatement" level="ERROR">
        <appender-ref ref="portalLogFile" />
    </logger>
    
</configuration>
